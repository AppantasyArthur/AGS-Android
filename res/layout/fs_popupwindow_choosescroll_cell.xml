<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FS_PopupWindow_ChooseScroll_RLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"   
    >
    <ImageButton 
		android:id="@+id/FS_PopupWindow_ChooseScroll_RLayout_Radio_ImageButton"
       	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:layout_centerVertical="true"  	
    	android:scaleType="fitXY"     		
        />
    <TextView 
	    android:id="@+id/FS_PopupWindow_ChooseScroll_RLayout_Name_TextView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"   		
	    android:layout_toRightOf="@+id/FS_PopupWindow_ChooseScroll_RLayout_Radio_ImageButton"
	    android:padding="0dp"
	    android:gravity="center_vertical"
	    android:background="#7f0000ff"
	    android:textColor="#ffffff"
	    android:text="Text1"
        />    
</RelativeLayout>

