<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pFSW_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000"
    >
	<RelativeLayout 
	    android:id="@+id/pFSW_RLayout_TITLE_RLayout"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_alignParentTop="true"
   		android:background="#373737"
	    >  
	    <Button
            android:id="@+id/pFSW_RLayout_RLayout_Back_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ffffff"
        	android:gravity="center"
        	android:text="Back"
            />    
	    <TextView 
            android:id="@+id/pFSW_RLayout_RLayout_Title_TextView"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ff0000"
        	android:gravity="center"
        	android:text="Wireless"
            />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/pFSW_RLayout_BODY_RLayout"
    	android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:layout_below="@+id/pFSW_RLayout_TITLE_RLayout"
   		android:background="#00000000"
	    >  
	</RelativeLayout>
</RelativeLayout>
