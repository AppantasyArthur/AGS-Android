<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FSM_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000" >

    <RelativeLayout 
        android:id="@+id/FSM_RLayout_TITLE_RLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#575757"
        >    
        <Button
            android:id="@+id/FSM_RLayout_RLayout_Done_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ffffff"
        	android:gravity="center"
        	android:text="Done"
            />    
        <TextView 
            android:id="@+id/FSM_RLayout_RLayout_Title_TextView"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ff0000"
        	android:gravity="center"
        	android:text="Settings"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/FSM_RLayout_Menu_RLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/FSM_RLayout_TITLE_RLayout"
        android:background="#000000"
        >
        <Button
            android:id="@+id/FSM_RLayout_RLayout_About_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:gravity="center_vertical"
        	android:textColor="#ffffff"        	
        	android:text="About"
            />
        <Button
            android:id="@+id/FSM_RLayout_RLayout_Firmrware_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:gravity="center_vertical"
        	android:textColor="#ffffff"        
        	android:text="Firmrware"
            /> 
        <Button
            android:id="@+id/FSM_RLayout_RLayout_Wireless_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:gravity="center_vertical"
        	android:textColor="#ffffff"        
        	android:text="Wireless Setup"
            /> 
        <Button
            android:id="@+id/FSM_RLayout_RLayout_Idenrify_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:gravity="center_vertical"
        	android:textColor="#ffffff"        	
        	android:text="Idenrify Speaker"
            />        
    </RelativeLayout>   
</RelativeLayout>
