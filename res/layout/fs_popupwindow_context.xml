<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FS_PopupWindow_BackGround_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
    android:clickable="false"
    >
    <RelativeLayout 
        android:id="@+id/FS_PopupWindow_Content_RLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:background="#333333"
        >
        <RelativeLayout 
            android:id="@+id/FS_PopupWindow_Content_RLayout_TITLE_RLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
            >
            <Button 
                android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_Close_Button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentLeft="true"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:padding="0dp"
			    android:textColor="#ffffff"
			    android:text="Close"
                />
            <TextView 
                android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_Title_TextView"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_toLeftOf="@+id/FS_PopupWindow_Content_RLayout_RLayout_Done_Button"
		        android:layout_toRightOf="@+id/FS_PopupWindow_Content_RLayout_RLayout_Close_Button"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:padding="0dp"
			    android:textColor="#ffffff"
			    android:text="Group Speakers"
                />
            <Button 
                android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_Done_Button"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentRight="true"
		        android:textStyle="bold"
		        android:gravity="center"
		        android:padding="0dp"
			    android:textColor="#ffffff"
			    android:text="Done"
                />
        </RelativeLayout>
        <RelativeLayout 
           	android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_Body_RLayout"
            android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_below="@+id/FS_PopupWindow_Content_RLayout_TITLE_RLayout"
            >
	        <TextView 
	            android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_Choose_TextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"			    
			    android:layout_centerHorizontal="true"
			    android:gravity="center_vertical"
			    android:padding="0dp"
			    android:textColor="#ffffff"
			    android:text="Choose Speakers To Play:"		    
	            />
	        <TextView 
	            android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_ChooseName_TextView"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@+id/FS_PopupWindow_Content_RLayout_RLayout_Choose_TextView"
			    android:layout_centerHorizontal="true"
			    android:gravity="center_vertical"
			    android:padding="0dp"
			    android:textColor="#0cb2dc"
			    android:text="When You Were Young"	
	            />
	        <ScrollView
	            android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_ChooseScroll_ScrollView"
	            android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:layout_alignParentTop="true"
			    android:background="#00000000"		    
	            >
	            <LinearLayout
	                android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_ScrollView_ChooseScroll_LLayout"
		            android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical"
				    ></LinearLayout>
	        </ScrollView>
        </RelativeLayout>
        <Button 
            android:id="@+id/FS_PopupWindow_Content_RLayout_RLayout_SelectALL_Button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_centerHorizontal="true"
		    android:padding="0dp"
		    android:textColor="#ffffff"
		    android:text="Select ALL"	
            />
    </RelativeLayout>
    
</RelativeLayout>
