<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pFSA_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000"
    >
	<RelativeLayout 
	    android:id="@+id/pFSA_RLayout_TITLE_RLayout"
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_alignParentTop="true"
   		android:background="#474747"
	    >  
	    <Button
            android:id="@+id/pFSA_RLayout_RLayout_Back_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ffffff"
        	android:gravity="center"
        	android:text="Back"
            />    
	    <TextView 
            android:id="@+id/pFSA_RLayout_RLayout_Title_TextView"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ff0000"
        	android:gravity="center"
        	android:text="About"
            />
	</RelativeLayout>
	<RelativeLayout 
	    android:id="@+id/pFSA_RLayout_BODY_RLayout"
    	android:layout_width="match_parent"
   		android:layout_height="match_parent"
   		android:layout_below="@+id/pFSA_RLayout_TITLE_RLayout"
   		android:background="#00000000"
	    >  
	    <TextView 
	        android:id="@+id/pFSA_RLayout_RLayout_Name_TextView"
	    	android:layout_width="wrap_content"
	   		android:layout_height="wrap_content"
	   		android:layout_alignParentTop="true"
	   		android:layout_alignParentLeft="true"
	   		android:textColor="#ffffff"
	        />
	    <ListView 
	        android:id="@+id/pFSA_RLayout_RLayout_About_ListView"
	    	android:layout_width="wrap_content"
	   		android:layout_height="match_parent"
	   		android:layout_below="@+id/pFSA_RLayout_RLayout_Name_TextView"
	   		android:layout_alignParentLeft="true"
	   		android:listSelector="@android:color/transparent"
	   		android:divider="#00000000"
	   		android:background="#00000000"
	        >
	    </ListView>
	</RelativeLayout>
</RelativeLayout>
