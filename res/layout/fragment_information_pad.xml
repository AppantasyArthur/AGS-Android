<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FI_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <RelativeLayout 
        android:id="@+id/FI_RLayout_UP_RLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#ff0000"
        >  
        <RelativeLayout 
	    	android:id="@+id/FI_RLayout_RLayout_UTITLE_RLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:background="#000000"
	        >       
	        <TextView
	            android:id="@+id/FI_RLayout_RLayout_RLayout_PLAYING_TextView"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_centerInParent="true"
	            android:padding="0dp"
	            android:gravity="center_vertical"
	            android:textColor="#ffffff"
	            android:text="Now Playing"      
	            />       
    	</RelativeLayout>
        <com.alpha.musicinfo.MusicInfoFlipperView
            android:id="@+id/FI_RLayout_RLayout_INFOR_ViewFlipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_below="@+id/FI_RLayout_RLayout_UTITLE_RLayout"
            android:background="#00000000"
            >
        </com.alpha.musicinfo.MusicInfoFlipperView>
        <com.alpha.musicinfo.FI_PointLiLayout
            android:id="@+id/FI_RLayout_RLayout_Point_LLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            >
	        </com.alpha.musicinfo.FI_PointLiLayout>         
        <!-- </com.FI.SETTING.FI_PointLiLayout>	 -->
          
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/FI_RLayout_DOWN_RLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/FI_RLayout_UP_RLayout"
        android:background="#00000000"
        >       
        <RelativeLayout 
	    	android:id="@+id/FI_RLayout_RLayout_DTITLE_RLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:background="#00000000"
	        >       
	        <TextView
	            android:id="@+id/FI_RLayout_RLayout_RLayout_QUEUE_TextView"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_centerInParent="true"
	            android:padding="0dp"
	            android:gravity="center_vertical"
	            android:textColor="#ff0000"
	            android:text="Queue"      
	            />       
    	</RelativeLayout>
		<RelativeLayout 
		    android:id="@+id/FI_RLayout_RLayout_QUEUE_RLayout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/FI_RLayout_RLayout_DTITLE_RLayout"
		    >
	        <com.alpha.musicinfo.MusicInfoListView
	            android:id="@+id/FI_RLayout_RLayout_QUEUE_ListView"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"	          
	            android:background="#00000000"
	            android:listSelector="@android:color/transparent"
	            android:divider="#00000000"
	            >
	        </com.alpha.musicinfo.MusicInfoListView>
		</RelativeLayout>
    </RelativeLayout>
   
</RelativeLayout>
