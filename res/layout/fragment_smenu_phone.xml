<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pFSM_RLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000" >

    <RelativeLayout 
        android:id="@+id/pFSM_RLayout_TITLE_RLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#575757"
        >    
        <Button
            android:id="@+id/pFSM_RLayout_RLayout_Done_Button"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:layout_centerVertical="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ffffff"
        	android:gravity="center"
        	android:text="Done"
            />    
        <TextView 
            android:id="@+id/pFSM_RLayout_RLayout_Title_TextView"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_centerInParent="true"
        	android:padding="0dp"
        	android:textStyle="bold"
        	android:textColor="#ff0000"
        	android:gravity="center"
        	android:text="Settings"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/pFSM_RLayout_Body_RLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pFSM_RLayout_TITLE_RLayout"
        >
        <RelativeLayout
            android:id="@+id/pFSM_RLayout_RLayout_Menu_RLayout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"	        
            >
            <ListView 
                android:id="@+id/pFSM_RLayout_RLayout_Menu_ListView"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:background="#00000000"
		        android:listSelector="@android:color/transparent"
		        android:divider="#000000"
                >                
            </ListView>
        </RelativeLayout>
        
     </RelativeLayout>
</RelativeLayout>
